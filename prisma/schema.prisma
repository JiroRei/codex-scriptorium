generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id              String    @id // Clerk userId
  username        String    @unique
  avatarUrl       String
  
  bio             String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  comicseries     ComicSeries[]
  writtenseries   WrittenSeries[]
  artworks        Artwork[]
  c_comments      CommentComics[]
  w_comments      CommentWritten[]
  artComments     ArtComment[]
  artLikes        ArtLike[]
}



model ComicSeries {
  id          String      @id @default(cuid())
  title       String
  description String?
  coverUrl    String?
  genre       String?
  creatorId   String
  @@index([creatorId])
  creator     User @relation(fields: [creatorId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  episodes    Episode[]
}

model Episode {
  id          String       @id @default(cuid())
  title       String
  number      Int
  c_seriesId  String
  @@unique([c_seriesId, number])
  @@index([c_seriesId])
  createdAt   DateTime  @default(now())
  
  c_series  ComicSeries    @relation(fields: [c_seriesId], references: [id])
  images    EpisodeImage[]

  comments  CommentComics[]
}

model EpisodeImage {
  id        String   @id @default(cuid())
  imageUrl  String
  order     Int

  episodeId String
  episode   Episode  @relation(fields: [episodeId], references: [id])
}

model CommentComics {
  id        String      @id @default(cuid())
  userId    String
  
  episodeId String
  content   String
  @@index([userId])
  @@index([episodeId])
  
  createdAt DateTime    @default(now())

  user      User        @relation(fields: [userId], references: [id])
  episode   Episode     @relation(fields: [episodeId], references: [id])
}

model WrittenSeries {
  id          String @id @default(cuid())
  title       String
  description String?
  coverUrl    String?
  genre       String?
  creatorId   String
  creator     User @relation(fields: [creatorId], references: [id])

  chapters    Chapter[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime   @updatedAt

}

model Chapter {
  id          String @id @default(cuid())
  title       String
  number      Int
  w_seriesId  String
  @@unique([w_seriesId, number])
  
  w_series    WrittenSeries @relation(fields: [w_seriesId], references: [id])
  createdAt   DateTime  @default(now())

  comments    CommentWritten[]
}

model CommentWritten {
  id          String      @id @default(cuid())
  userId      String
  
  chapterId   String
  content     String
  
  createdAt   DateTime    @default(now())

  user        User        @relation(fields: [userId], references: [id])
  chapter     Chapter     @relation(fields: [chapterId], references: [id])
}

model Artwork {
  id          String      @id @default(cuid())
  title       String
  description String?
  imageUrl    String   
  tags        String[]  
  createdAt   DateTime  @default(now())

  creatorId   String
  creator     User      @relation(fields: [creatorId], references: [id])
  comments    ArtComment[]
  likes       ArtLike[]
}

model ArtComment {
  id          String     @id @default(cuid())
  artworkId   String
  userId      String
  content     String
  createdAt   DateTime @default(now())

  artwork     Artwork @relation(fields: [artworkId], references: [id])
  user        User @relation(fields: [userId], references: [id])
}

model ArtLike {
  id          String     @id @default(cuid())
  artworkId   String
  userId      String

  artwork     Artwork @relation(fields: [artworkId], references: [id])
  user        User @relation(fields: [userId], references: [id])


  @@unique([artworkId, userId])
}





